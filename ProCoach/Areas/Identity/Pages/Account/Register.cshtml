@page
@model RegisterModel
@{
    ViewData["Title"] = "Register New Account";

    <!--  Layout = "_AdminLayout"-->;
}

<section class="content">
    <div class="register-box-body">
        <div class="box box-primary">
            <h3 class="box-title">Register New Account</h3>
            <div class="box-header with-border">
            </div>
            <div class="row">
                <div class="col-md-6">
                    <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <!-- <h4>Create a new account.</h4> -->
                        <hr />
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group has-feedback">
                            <input type="email" class="form-control" placeholder="Email">
                            <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
                        </div>
                        <div class="form-group has-feedback">
                            <label asp-for="Input.Password"></label>
                            <input asp-for="Input.Password" class="form-control" placeholder="Password" />
                            <span asp-validation-for="Input.Password" class="glyphicon glyphicon-log-in form-control-feedback"></span>
                        </div>
                        <div class="form-group has-feedback">
                            <label asp-for="Input.ConfirmPassword"></label>
                            <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="ConfirmPassword" />
                            <span asp-validation-for="Input.ConfirmPassword" class="glyphicon glyphicon-log-in form-control-feedback"></span>
                        </div>


                        <div class="box-footer">
                            <button type="submit" class="btn btn-primary">Register</button>
                        </div>
                        <!--
                            <div class="social-auth-links text-center">
                                <p>- OR -</p>
                                <a href="#" class="btn btn-block btn-social btn-facebook btn-flat">
                                    <i class="fa fa-facebook"></i> Sign up using
                                    Facebook
                                </a>
                                <a href="#" class="btn btn-block btn-social btn-google btn-flat">
                                    <i class="fa fa-google-plus"></i> Sign up using
                                    Google+
                                </a>
                            </div>
        -->
                        <a href="~/identity/account/login" class="text-center">I already have a membership</a>

                    </form>
                </div>
            </div>
        </div>

    </div>
</section>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


