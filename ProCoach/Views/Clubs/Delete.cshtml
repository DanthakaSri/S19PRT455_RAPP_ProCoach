@model Club

@{
    ViewData["Title"] = "Delete Club details";
    Layout = "_AdminLayout";
}
<section class="content">
    <h3>@ViewData["Title"]</h3>

    <div class="alert alert-danger" role="alert"><h3>Are you sure you want to delete this?</h3></div>


    <div>
        <div class="row">
            <div class="col-md-6">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title"><i class="fa fa-info-circle"></i> @ViewData["Title"]</h3>
                    </div>
                    <div class="box-body no-padding">
                        <table class="table table-striped">
                            <tbody>
                                <tr>
                                    <td> <i class="fa fa-circle-o"></i></td>
                                    <td><b> @Html.DisplayNameFor(model => model.Sport)</b></td>
                                    <td>
                                        @Html.DisplayNameFor(model => model.Sport)
                                    </td>
                                </tr>
                                <tr>
                                    <td> <i class="fa fa-circle-o"></i></td>
                                    <td><b> @Html.DisplayNameFor(model => model.Address)</b></td>
                                    <td>
                                        @Html.DisplayNameFor(model => model.Address)
                                    </td>
                                </tr>
                                <tr>
                                    <td> <i class="fa fa-circle-o"></i></td>
                                    <td><b> @Html.DisplayNameFor(model => model.Phone)</b></td>
                                    <td>
                                        @Html.DisplayNameFor(model => model.Phone)
                                    </td>
                                </tr>
                                <tr>
                                    <td> <i class="fa fa-circle-o"></i></td>
                                    <td><b> @Html.DisplayNameFor(model => model.Website)</b></td>
                                    <td>
                                        @Html.DisplayNameFor(model => model.Website)
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <form asp-action="Delete">
            <input type="hidden" asp-for="ID" />
            <input type="submit" value="Delete" class="btn btn-default" /> |
            <a asp-action="Index" class="btn btn-primary">Back to List</a>
        </form>
    </div>
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
