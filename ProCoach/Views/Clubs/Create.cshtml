@model ProCoach.Data.Club

@{
    ViewData["Title"] = "Create";
    Layout = "_AdminLayout";
}
<section class="content">
    <h2>Create</h2>    
    <div class="row">
        <div class="col-md-6">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Create New Club</h3>
                </div>

                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="box-body">
                        <div class="form-group">
                            <label asp-for="Sport" class="control-label"></label>
                            <input asp-for="Sport" class="form-control" />
                            <span asp-validation-for="Sport" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Address" class="control-label"></label>
                            <input asp-for="Address" class="form-control" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Phone" class="control-label"></label>
                            <input asp-for="Phone" class="form-control" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Website" class="control-label"></label>
                            <input asp-for="Website" class="form-control" />
                            <span asp-validation-for="Website" class="text-danger"></span>
                        </div>
                        <div class="box-footer">
                            <button type="submit" value="Create" class="btn btn-primary">Submit</button>
                        </div>
                    </div>

                </form>
                </div>
                <div>
                    <a asp-action="Index" class="btn btn-success">Back to List</a>
                </div>
            </div>
            </div>   

    
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}