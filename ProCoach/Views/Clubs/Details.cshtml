@model Club

@{
    ViewData["Title"] = "Details";
    Layout = "_AdminLayout";
}
<section class="content">
    <div class="row">
        <div class="col-md-6">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title"><i class="fa fa-info-circle"></i> @ViewData["Title"]</h3>
                </div>
                <div class="box-body no-padding">
                    <table class="table table-striped">
                        <tbody>
                            <tr>
                                <td> <i class="fa fa-circle-o"></i></td>
                                <td><b>@Html.DisplayNameFor(model => model.Sport)</b></td>
                                <td>
                                    @Html.DisplayFor(model => model.Sport)
                                </td>

                            </tr>
                            <tr>
                                <td> <i class="fa fa-circle-o"></i></td>
                                <td><b>@Html.DisplayNameFor(model => model.Address)</b></td>
                                <td>
                                    @Html.DisplayFor(model => model.Address)
                                </td>

                            </tr>
                            <tr>
                                <td> <i class="fa fa-circle-o"></i></td>
                                <td><b>@Html.DisplayNameFor(model => model.Phone)</b></td>
                                <td>
                                    @Html.DisplayFor(model => model.Phone)
                                </td>

                            </tr>

                            <tr>
                                <td> <i class="fa fa-circle-o"></i></td>
                                <td><b>@Html.DisplayNameFor(model => model.Website)</b></td>
                                <td>
                                    @Html.DisplayFor(model => model.Website)
                                </td>

                            </tr>
                        </tbody>
                    </table>
                </div>

            </div>
        </div>
    </div>

    <div class="btn-group" role="group">
        <a asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-success">Edit</a> |
        <a asp-action="Index" class="btn btn-success">Back to List</a>
    </div>
</section>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
