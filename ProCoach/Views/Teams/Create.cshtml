@model Team

@{
    ViewData["Title"] = "Create";
    Layout = "_AdminLayout";
}
    <section class="content">
        <h2>Create</h2>


<div class="row">
    <div class="col-md-6">
    <div class="box box-primary">
        <div class="box-header with-border">
            <h3 class="box-title">Create New Team</h3>
        </div>

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="box-body">
                <div class="form-group">
                    <label asp-for="team_name" class="control-label"></label>
                    <input asp-for="team_name" class="form-control" />
                    <span asp-validation-for="team_name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="email" class="control-label"></label>
                    <input asp-for="email" class="form-control" />
                    <span asp-validation-for="email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="club" class="control-label"></label>
                    <input asp-for="club" class="form-control" />
                    <span asp-validation-for="club" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="sport" class="control-label"></label>
                    <input asp-for="sport" class="form-control" />
                    <span asp-validation-for="sport" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="coaches" class="control-label"></label>

                    <select asp-for="coaches" class="form-control" asp-items="@(new SelectList(ViewBag.coaches, "Id", "FirstName"))">
                        <option value="0">Please Select coach</option>
                    </select>
                    <span asp-validation-for="coaches" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="competition" class="control-label"></label>
                    <input asp-for="competition" class="form-control" />
                    <span asp-validation-for="competition" class="text-danger"></span>
                </div>
               
            </div>
            <!-- /.box-body -->

            <div class="box-footer">
                <button type="submit"  value="Create" class="btn btn-primary">Submit</button>
            </div>

            
        </form>
        </div>
    </div>
</div>


    



    <div>
        <a class="btn btn-success" asp-action="Index">Back to List</a>
    </div>
</section>