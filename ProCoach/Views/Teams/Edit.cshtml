@model ProCoach.Data.Team

@{
    ViewData["Title"] = "Edit";
    Layout = "_AdminLayout";
}

<section class="content">

    <h2>Edit</h2>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Edit Team Information</h3>
                </div>
                <div class="box-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="id" />
                        <div class="form-group">
                            <label asp-for="team_name" class="control-label"></label>
                            <input asp-for="team_name" class="form-control" />
                            <span asp-validation-for="team_name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="email" class="control-label"></label>
                            <input asp-for="email" class="form-control" />
                            <span asp-validation-for="email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="club" class="control-label"></label>
                            <input asp-for="club" class="form-control" />
                            <span asp-validation-for="club" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="sport" class="control-label"></label>
                            <input asp-for="sport" class="form-control" />
                            <span asp-validation-for="sport" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="coaches" class="control-label"></label>
                            <input asp-for="coaches" class="form-control" />
                            <span asp-validation-for="coaches" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="competition" class="control-label"></label>
                            <input asp-for="competition" class="form-control" />
                            <span asp-validation-for="competition" class="text-danger"></span>
                        </div>

                        <div class="box-footer">
                            <button type="submit" value="Save" class="btn btn-primary">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div>
        <a asp-action="Index" class="btn btn-success">Back to List</a>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
