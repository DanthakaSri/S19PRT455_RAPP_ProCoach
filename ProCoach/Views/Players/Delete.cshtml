                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
        </div>
        </div>


        <form asp-action="Delete">

            <input type="hidden" asp-for="Id" />
            <div><input type="submit" value="Delete" class="btn btn-danger" /> |
            <a type="Button" class="btn btn-primary" asp-action="Index">Back to List</a>
