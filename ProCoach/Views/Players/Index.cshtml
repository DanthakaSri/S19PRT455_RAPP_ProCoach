@model IEnumerable<ProCoach.Data.Players>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a class="btn btn-success" asp-action="Create" role="button">Add New Player</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DOB)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mobile_Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Emergency_Contact)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Club_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sports)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Team)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DOB)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mobile_Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Emergency_Contact)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Club_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sports)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Team)
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit Details</a> |
                <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Info</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete Players</a>
            </td>
        </tr>
}
    </tbody>
</table>
